<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_startupscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview1"
            style="@style/startpage_text_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:background="@drawable/startscreen_background_port1"
            android:gravity="center"
            android:padding="2dp"
            android:text="PLACEHOLDER"
            android:textColor="@color/CadetBlue" />

        <TextView
            android:id="@+id/textview2"
            style="@style/startpage_text_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:background="@drawable/startscreen_background_port2"
            android:gravity="center"
            android:text="PLACEHOLDER"
            android:textColor="@color/BlueViolet" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageview3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:scaleType="center"
            android:background="@drawable/startscreen_background_settings"
            android:src="@drawable/ic_movie_clip"/>

        <ImageView
            android:id="@+id/imageview4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:scaleType="center"
            android:background="@drawable/startscreen_background_info"
            android:src = "@drawable/ic_info"
             />
    </LinearLayout>

</LinearLayout>